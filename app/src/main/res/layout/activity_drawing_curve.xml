<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawingCurve">

    <com.github.mikephil.charting.charts.LineChart

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/drawingCurve"></com.github.mikephil.charting.charts.LineChart>

    <Button
        android:id="@+id/backtoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/drawingCurve"
        android:text="click to return to main page" />

    <Button
        android:id="@+id/replugParameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backtoMain"
        android:layout_centerHorizontal="true"
        android:text="click to replug parameter" />


</RelativeLayout>